@model IEnumerable<ProgressPacer.Models.Study>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ModuleCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModuleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalSelfStudy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SelfStudyHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudyDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RemainingHrs)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ModuleCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModuleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalSelfStudy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SelfStudyHours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudyDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RemainingHrs)
            </td>
            
            <td>
                    <a asp-action="Details" asp-route-id="@item.StudyId">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
